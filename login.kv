MDScreen:
    name: "login"
    MDFloatLayout:
        canvas:
            Color:
                rgb:0x33 / 255.0, 0x99 / 255.0, 0x66/255.0
            Rectangle:
                size: self.size
        MDIconButton:
            icon: "chevron-left"
            md_bg_color: 0x33 / 255.0, 0x99 / 255.0, 0x66/255.0
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_press: app.on_start()
        MDLabel:
            text: "Back"
            pos_hint: {"center_x": .2,"center_y": .949}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            font_size: "18sp"

        MDLabel:
            text: "MoveBy"
            pos_hint: {"center_x": .5,"center_y": .8}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            font_size: "35sp"
            #font_name: 'Poppins-SemiBold.ttf'
        MDLabel:
            text: "Choose Pathway"
            pos_hint: {"center_x": .5,"center_y": .6}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            font_size: "13sp"
            #font_name: 'Poppins-Regular.ttf'

        MDFillRoundFlatButton:
            text: "Rent a Car"
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: "center"
            size_hint: .7, None
            md_bg_color: 1,1,1,1
            text_color: 0,0,0,1
            on_press: app.car()
        MDFillRoundFlatButton:
            text: "Hire a Car"
            pos_hint: {"center_x": .5, "center_y": .4}
            halign: "center"
            size_hint: .7, None
            md_bg_color: 1,1,1,1
            text_color: 0,0,0,1
            on_press: app.car()